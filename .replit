modules = ["nodejs-20", "swift-5.8", "python-3.11", "flutter"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter", "firebase-tools"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web App"

[[workflows.workflow]]
name = "Flutter Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8313
externalPort = 3001

[[ports]]
localPort = 9005
externalPort = 3000

[deployment]
deploymentTarget = "static"
publicDir = "build/web"
